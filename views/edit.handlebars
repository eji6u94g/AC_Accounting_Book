<div class=' w-60 outter-container center'>
  <div class='center'>
    <form action="/expensetrackers/{{id}}?_method=PUT" method="POST"
      class='d-flex flex-column justify-content-center align-items-start'>
      <p>請修改你的支出</p>
      <label for="name">名稱:</label>
      <input type="text" id="name" name="name" value="{{record.name}}" required>
      <label for="date">日期:</label>
      <input type="date" id="date" name="date" value="{{record.date}}" required>
      <label for="category">類別:</label>
      <select name="category" id="category">
        <option value="家居物業" {{#if (isCategorySelected record.category '家居物業' )}} selected{{/if}}>家居物業</option>
        <option value="交通出行" {{#if (isCategorySelected record.category '交通出行' )}} selected{{/if}}>交通出行</option>
        <option value="休閒娛樂" {{#if (isCategorySelected record.category '休閒娛樂' )}} selected{{/if}}>休閒娛樂</option>
        <option value="餐飲食品" {{#if (isCategorySelected record.category '餐飲食品' )}} selected{{/if}}>餐飲食品</option>
        <option value="其他" {{#if (isCategorySelected record.category '其他' )}} selected{{/if}}>其他</option>
      </select>
      <label for="amount">金額:</label>
      <input type="text" id="amount" name="amount" value="{{record.amount}}" required>
      <button class='btn' type="submit">儲存</button>
    </form>
  </div>
</div>