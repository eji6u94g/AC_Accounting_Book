<div class=' w-60 center'>
  <div class='center'>
    <form action="/expensetrackers/{{id}}?_method=PUT" method="POST"
      class='d-flex flex-column justify-content-center align-items-start'>
      <div class="container mb-3">
        <div class='row d-flex flex-row justify-content-between align-items-center mt-1 '>
          <span class='col-3' style='font-size:0.5rem;'>*必填欄位</span>
          <span class='col-9'>請修改你的支出</span>
        </div>
      </div>
      <div class="container">
        <div class="row input-group mb-3">
          <label for="name" class='col-3'>名稱* :</label>
          <input type="text" id="name" name="name" value="{{record.name}}" class="form-control col-9" required>
        </div>
      </div>
      <div class="container">
        <div class="row input-group mb-3">
          <label for="date" class='col-3'>日期* :</label>
          <input type="date" id="date" name="date" value="{{record.date}}" class="form-control col-9" required>
        </div>
      </div>
      <div class="container">
        <div class="row input-group mb-3">
          <label for="category" class='col-3'>類別* :</label>
          <select name="category" id="category" class='form-select col-9'>
            <option value="家居物業" {{#if (isCategorySelected record.category '家居物業' )}} selected{{/if}}>家居物業</option>
            <option value="交通出行" {{#if (isCategorySelected record.category '交通出行' )}} selected{{/if}}>交通出行</option>
            <option value="休閒娛樂" {{#if (isCategorySelected record.category '休閒娛樂' )}} selected{{/if}}>休閒娛樂</option>
            <option value="餐飲食品" {{#if (isCategorySelected record.category '餐飲食品' )}} selected{{/if}}>餐飲食品</option>
            <option value="其他" {{#if (isCategorySelected record.category '其他' )}} selected{{/if}}>其他</option>
          </select>
        </div>
      </div>
      <div class="container">
        <div class="row input-group mb-3">
          <label for="amount" class='col-3'>金額* :</label>
          <input type="text" id="amount" name="amount" value="{{record.amount}}" class="form-control col-9" required>
        </div>
      </div>
      <button class='btn btn-outline-dark button-save' type="submit">送出</button>
    </form>
  </div>
</div>